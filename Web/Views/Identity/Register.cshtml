@model Web.Models.Identity.UserModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading text-center"><h4>Регистрация</h4></div>
            @using (Html.BeginForm(FormMethod.Post))
            {
                <div class="panel-body">
                    <div class="form-group center-block">
                        @Html.LabelFor(x => x.Login, "Логин")
                        @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @style = "width: 70%" })
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Email, "Email")
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @style = "width: 70%" })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password, "Пароль")
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @style = "width: 70%" })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name, "Имя")
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @style = "width: 70%" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-success" value="Отправить" />
                    @Html.ActionLink("Отменить", "Index", "Home", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>