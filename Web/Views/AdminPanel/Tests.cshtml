@model List<TestModel>
@{
    ViewData["Title"] = "Tests";
}
<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3>Список тестов</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">Название</th>
                    <th class="text-right">Количество вопросов</th>
                    <th class="text-center">Удалить</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <span class="text-right sr-only">@item.Id</span>
                        <td class="text-right">@Html.ActionLink(item.Name, "Edit", new { item.Id })</td>
                        <td class="text-right">@item.Questions.Count</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "AdminPanel"))
                            {
                                @Html.Hidden("Id", item.Id)
                                <input type="submit"
                                       class="btn btn-default btn-xs"
                                       value="Удалить" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Добавить", "Create", new {}, new {@class="btn btn-success"})
        </div>
    </div>
</div>