@{
    ViewData["Title"] = "Тестовик";
}

<div class="row">
    @for (int i = 0; i < 10; i++)
    {
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
        <div class="panel panel-info">
            <div class="panel-heading">Тест @i</div>
            <div class="panel-body">
                <img class="img-responsive img-rounded" src="https://sun9-26.userapi.com/c635101/v635101379/54e04/5YSjTc18tBY.jpg"/>
            </div>
            <div class="panel-footer">
                <a class="btn btn-primary" href="#">Начать</a>
                @if (i % 3 == 0)
                {
                    <span class="btn btn-success pull-right">Пройден</span>
                }
                else
                {
                    <span class="btn btn-warning pull-right">Не пройден</span>
                }
            </div>
        </div>
        </div>
    }
</div>